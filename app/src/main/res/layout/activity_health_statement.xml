<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".HealthStatement">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"


        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/child_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_200"
                android:text="Child Detials" />

            <EditText
                android:id="@+id/child_id"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="ID"
                android:inputType="text"
                android:maxLength="10"
                android:padding="10dp" />

            <EditText
                android:id="@+id/chaild_familiy_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="Familiy Name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/child_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="First Name"
                android:inputType="text"
                android:maxLength="10"
                android:padding="10dp" />

            <EditText
                android:id="@+id/birthday_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="Birth Date dd/mm/yyyy"
                android:inputType="date"
                android:maxLength="10"
                android:padding="10dp" />

            <TextView
                android:id="@+id/kindergarten_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/purple_200"
                android:text="Kindergarten Detials" />

            <EditText
                android:id="@+id/manager_id"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="Kindergarten Manager"
                android:inputType="text"
                android:maxLength="10"
                android:padding="10dp" />

            <EditText
                android:id="@+id/city_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="City"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/Kindergarten_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="Kindergarten Name"
                android:inputType="text"
                android:maxLength="10"
                android:padding="10dp" />

            <TextView
                android:id="@+id/parent_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/purple_200"
                android:text="Parent Detials" />

            <EditText
                android:id="@+id/parent_id"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="ID"
                android:inputType="text"
                android:maxLength="10"
                android:padding="10dp" />

            <EditText
                android:id="@+id/parent_familiy_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="Familiy Name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/parent_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="First Name"
                android:inputType="text"
                android:maxLength="10"
                android:padding="10dp" />

            <EditText
                android:id="@+id/phone_number_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="10dp" />

            <EditText
                android:id="@+id/Email_name"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="10"
                android:padding="10dp" />

            <TableLayout
                android:id="@+id/Checkers"
                android:layout_width="359dp"
                android:layout_height="213dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/check1_id"
                        android:layout_width="217dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:lines="3"
                        android:text="My child has no fever pre then 38 degreses" />

                    <CheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/check2_id"
                        android:layout_width="217dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:lines="3"
                        android:text="My child does not cough and has no difficulty breathing" />

                    <CheckBox
                        android:id="@+id/checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/check3_id"
                        android:layout_width="217dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:lines="3"
                        android:text="My child has not been around a person with Covid-19 in the last two weeks" />

                    <CheckBox
                        android:id="@+id/checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>


            <Button
                android:id="@+id/submit_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:text="Submit" /><![CDATA[
            EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/child_name"
            android:hint="First Name"
            android:padding="10dp"
            android:inputType="text"
            android:background="@color/white"
            android:maxLength="10"/>


                />
        ]]>
        </LinearLayout>
    </ScrollView>


</LinearLayout>